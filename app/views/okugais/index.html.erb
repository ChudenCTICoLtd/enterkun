<h1>Listing okugais</h1>

<table>
  <thead>
    <tr>
      <th>Toritsukezetsuen ryohifuno</th>
      <th>Tabutsurikaku ryohifuno</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @okugais.each do |okugai| %>
      <tr>
        <td><%= okugai.toritsukezetsuen_ryohifuno %></td>
        <td><%= okugai.tabutsurikaku_ryohifuno %></td>
        <td><%= link_to 'Show', okugai %></td>
        <td><%= link_to 'Edit', edit_okugai_path(okugai) %></td>
        <td><%= link_to 'Destroy', okugai, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

