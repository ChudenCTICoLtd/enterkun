<%- model_class = Keiyaku -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:okyaku_code) %>:</strong></dt>
  <dd><%= @keiyaku.okyaku_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:chosa_kubn) %>:</strong></dt>
  <dd><%= @keiyaku.chosa_kubn %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kanriku_code) %>:</strong></dt>
  <dd><%= @keiyaku.kanriku_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hashira_bango) %>:</strong></dt>
  <dd><%= @keiyaku.hashira_bango %></dd>
  <dt><strong><%= model_class.human_attribute_name(:okyaku_name) %>:</strong></dt>
  <dd><%= @keiyaku.okyaku_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:keiyakushubetsu_code) %>:</strong></dt>
  <dd><%= @keiyaku.keiyakushubetsu_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:torikigai_code) %>:</strong></dt>
  <dd><%= @keiyaku.torikigai_code %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              keiyakus_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_keiyaku_path(@keiyaku), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              keiyaku_path(@keiyaku),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
