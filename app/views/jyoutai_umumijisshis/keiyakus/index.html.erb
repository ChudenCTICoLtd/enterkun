<%- model_class = Keiyaku -%>
<div class="page-header">
  <h1>お客さまの契約一覧</h1>
</div>
<%= paginate(@keiyakus)%>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:okyaku_code) %></th>
      <th><%= model_class.human_attribute_name(:chosa_kubn) %></th>
      <th><%= model_class.human_attribute_name(:kanriku_code) %></th>
      <th><%= model_class.human_attribute_name(:hashira_bango) %></th>
      <th><%= model_class.human_attribute_name(:okyaku_name) %></th>
      <th><%= model_class.human_attribute_name(:keiyakushubetsu_code) %></th>
      <th><%= model_class.human_attribute_name(:torikigai_code) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
    </tr>
  </thead>
  <tbody>
    <% @keiyakus.each do |keiyaku| %>
      <tr>
        <td><%= link_to keiyaku.id, "/keiyakus/#{keiyaku.id}" %></td>
        <td><%= keiyaku.okyaku_code %></td>
        <td><%= keiyaku.chosa_kubn %></td>
        <td><%= keiyaku.kanriku_code %></td>
        <td><%= keiyaku.hashira_bango %></td>
        <td><%= keiyaku.okyaku_name %></td>
        <td><%= keiyaku.keiyakushubetsu_code %></td>
        <td><%= keiyaku.torikigai_code %></td>
        <td><%=l keiyaku.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_keiyaku_path,
            :class => 'btn btn-primary' %>
