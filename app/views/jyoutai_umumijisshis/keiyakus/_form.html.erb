<%= form_for @keiyaku, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :okyaku_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :okyaku_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :chosa_kubn, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :chosa_kubn, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :kanriku_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :kanriku_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :hashira_bango, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hashira_bango, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :okyaku_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :okyaku_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :keiyakushubetsu_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :keiyakushubetsu_code, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :torikigai_code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :torikigai_code, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                keiyakus_path, :class => 'btn' %>
  </div>
<% end %>
